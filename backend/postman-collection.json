    {
      "name": "Notes Management",
      "item": [
        {
          "name": "1. Create Note",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Note\",\n  \"content\": \"This is the content of my first note. It can contain detailed information.\",\n  \"tags\": [\"personal\", \"important\"],\n  \"isPinned\": false\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/notes",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notes"]
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "type": "text/javascript",
                  "exec": [
                    "if (pm.response.code === 201) {",
                    "    const response = pm.response.json();",
                    "    pm.environment.set('NOTE_ID', response.data.note._id);",
                    "}"
                  ]
                }
              }
            ]
          },
          "response": []
        },
        {
          "name": "2. Get All Notes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/notes?page=1&limit=10",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notes"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "3. Get Single Note",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/notes/{{NOTE_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notes", "{{NOTE_ID}}"]
            }
          },
          "response": []
        },
        {
          "name": "4. Update Note",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Note Title\",\n  \"content\": \"This is the updated content of my note.\",\n  \"tags\": [\"personal\", \"important\", \"updated\"],\n  \"isPinned\": true\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/notes/{{NOTE_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notes", "{{NOTE_ID}}"]
            }
          },
          "response": []
        },
        {
          "name": "5. Pin/Unpin Note",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/notes/{{NOTE_ID}}/pin",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notes", "{{NOTE_ID}}", "pin"]
            }
          },
          "response": []
        },
        {
          "name": "6. Archive/Unarchive Note",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/notes/{{NOTE_ID}}/archive",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notes", "{{NOTE_ID}}", "archive"]
            }
          },
          "response": []
        },
        {
          "name": "7. Search Notes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/notes/search?q=important&page=1&limit=10",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notes", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "important"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "8. Get Pinned Notes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/notes?isPinned=true",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notes"],
              "query": [
                {
                  "key": "isPinned",
                  "value": "true"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "9. Get Archived Notes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/notes?isArchived=true",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notes"],
              "query": [
                {
                  "key": "isArchived",
                  "value": "true"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "10. Delete Note",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{ACCESS_TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/notes/{{NOTE_ID}}",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "notes", "{{NOTE_ID}}"]
            }
          },
          "response": []
        }
      ]
    },
